<div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" placeholder="Title of the Magazine">
</div>

<div class="form-group">
    <label> Publisher </label>
    <input type="text" class="form-control" name="publisher" placeholder="Publisher of the Magazine">
</div>

<div class="form-group">
    <label>Language</label>
    <input type="text" class="form-control" name="language" placeholder="Language of the Magazine">
</div>

<div class="form-group">
    <label>ISBN10 <small class="text-muted">(1234567890)</small></label>
    <input type="number" maxlength="13" class="form-control" name="isbn10" placeholder="ISBN10 of the Magazine">
</div>

<div class="form-group">
    <label>ISBN13 <small class="text-muted">(1234567890123)</small></label>
    <input type="number" maxlength="13" class="form-control" name="isbn13" placeholder="ISBN13 of the Magazine">
</div>