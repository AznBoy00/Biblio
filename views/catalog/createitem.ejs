<!DOCTYPE html>
<html lang="en"> 

<head>
    <%- include('../partials/_header') -%>
    <script>function redirect(){window.location="/";}</script>
</head>

<body>
    <%- include('../partials/_navbar'); -%>
    <div class="container">
        
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <h2>Add a new Item</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <form>                 
                    <div class="form-group">
                        <label for="inputSelect">Select type of item to add to catalog:</label>
                        <select class="form-control" id="inputSelect" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                            <option value="">Select type</option>
                            <option value="/catalog/createitems/createBook">Book</option>
                            <option value="/catalog/createitems/createMagazine">Magazine</option>
                            <option value="/catalog/createitems/createMusic">Music</option>
                            <option value="/catalog/createitems/createMovie">Movie</option>
                        </select>
                    </div>            
                </form>
			</div>
			<!-- ./ end col -->
		</div>
		<!-- ./ end row -->

	</div>
	<!-- ./ end container -->
	<%- include('../partials/_footer') -%>   
</body>

</html>
