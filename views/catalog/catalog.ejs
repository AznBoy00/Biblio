<html lang="en">
<head>
    <%- include('../partials/_header'); -%>
    <script src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script>
        var activeFilters = 0;
        function hideOthers(type){
            const list = ['books' , 'magazines', 'music', 'movies'];
            let currentType = document.getElementById('#' + type);
            if (currentType !==  null){
                if(!currentType.classList.contains('active')){
                    activeFilters++;
                    currentType.classList.add("active");
                    $('.' + type).show();
                    for(var i = 0; i < list.length; i++){
                        if (list[i] !== type && !document.getElementById('#' + list[i]).classList.contains('active')){
                            $('.' + list[i]).hide();
                        } else {
                            $('.' + list[i]).show();
                        }
                    }
                } else {
                    currentType.classList.remove('active');
                    activeFilters--;
                    if (activeFilters === 0){
                        for(var i = 0; i < list.length; i++){
                            $('.' + list[i]).show();
                        }
                    } else {
                        $('.' + type).hide();
                    }
                }
            }
        }

        function getFilterUrl(filterType){
            const list = ['books' , 'magazines', 'music', 'movies'];
            var active = "";
            for(var i = 0; i < list.length; i++) {
                if (document.getElementById('#' + list[i]).classList.contains('active')) {
                    active += list[i] + ",";
                }
            }
            active = active.substring(0, active.length - 1);
            window.location.replace('/catalog/filter/' + filterType + '?active='+ active);
        }

        function applyFilters(){
            var active = <%- typeof active !== 'undefined' ? JSON.stringify(active) : 'undefined'%>;
            if (typeof active !== 'undefined'){
                var activeL = active.split(',');
                for(var i = 0; i < activeL.length; i++) {
                    hideOthers(activeL[i]);
                }
                if (window.location.href.includes("1")){
                    document.getElementById('#az').classList.add('active');
                } else if (window.location.href.includes("2")){
                    document.getElementById('#za').classList.add('active');
                }
            }
        }

    </script>
</head>

<body>
    <%- include('../partials/_navbar'); -%>
    <div class="container main">

        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 my-2">
                <h2>List of Items in the Catalog</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <div class="row">
                    <div class="col-12">
                        <!-- <span class="h4 align-middle ml-3 mb-0">Filters</span> -->
                        <a id="#az" class="btn btn-sm btn-outline-primary my-md-2 my-1 mr-2" href="#" onclick="getFilterUrl('1');"> A-Z </a>
                        <a id="#za" class="btn btn-sm btn-outline-primary my-md-2 my-1 mr-2" href="#" onclick="getFilterUrl('2')"> Z-A </a>
                        <button id="#books" type="button" class="btn btn-sm btn-outline-success my-md-2 my-1 mr-2 ml-2" onclick="hideOthers('books'); return false;">Book</button>
                        <button id="#magazines" type="button" class="btn btn-sm btn-outline-success my-md-2 my-1 mr-2" onclick="hideOthers('magazines'); return false;">Magazine</button>
                        <button id="#music" type="button" class="btn btn-sm btn-outline-success my-md-2 my-1 mr-2" onclick="hideOthers('music'); return false;">Music</button>
                        <button id="#movies" type="button" class="btn btn-sm  btn-outline-success my-md-2 my-1 mr-2" onclick="hideOthers('movies'); return false;">Movie</button>
                        <button type="button" class="btn btn-sm btn-outline-danger my-md-2 my-1 mr-2" onclick="window.location.replace('/catalog');">Clear Filters</button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover text-center">
                        <thead>
                            <tr>
                                <th>Item #</th>
                                <th>Type</th>
                                <th>Title</th>
                                <th>By</th>
                            </tr>
                        </thead>

                        <tbody>
                            <!-- Iterate over items -->
                                <% for(var j in list['items']) { %>
                                    <tr class="<%= list['items'][j].discriminator%>">
                                        <td><%= list['items'][j].item_id %></td>
                                        <td><%= list['items'][j].discriminator %></td>
                                        <td>
                                            <a href="/catalog/view/<%= list['items'][j].discriminator %>/<%= list['items'][j].item_id %>">
                                                <%= list['items'][j].title %>
                                            </a>
                                        </td>
                                        <% if (list['items'][j].discriminator == "Books" || filter){ %>
                                            <td><%= list['items'][j].author %></td>
                                        <% } else if (list['items'][j].discriminator == "Magazines"){%>
                                            <td><%= list['items'][j].publisher %></td>
                                        <% } else if (list['items'][j].discriminator == "Movies"){%>
                                            <td><%= list['items'][j].director %></td>
                                        <% } else if (list['items'][j].discriminator == "Music"){%>
                                            <td><%= list['items'][j].artist %></td>
                                        <% } %>
                                    </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- ./ end table responsive -->
			</div>
			<!-- ./ end col -->
		</div>
		<!-- ./ end row -->

	</div>
	<!-- ./ end container -->
    <script> applyFilters() </script>

    <%- include('../partials/_footer') -%>
</body>

</html>