<!-- Pages are using /partials/_error.ejs instead  -->
<!-- Default 404, 500, etc... errors are using this page -->
<!DOCTYPE html>
<html lang="en"> 
<head>
    <% title = 'Error' %>
    <%- include('partials/_header'); -%>
</head>

<body>
    <%- include('partials/_navbar'); -%>
    <div class="container main py-5">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h1><%= error.toString() %></h1>
                    <h1><%= error.message %></h1>
                    <h2 class="text-danger"><%= error.status %></h2>
                </div>
                <pre><%= error.stack %></pre>
            </div>
        </div>
        <!-- go back to previous location --> 
        <a class="form-group btn btn-sm btn-outline-primary mr-1 mt-2" href="javascript:history.back()">Go back</a>
    </div>
    <%- include('partials/_footer'); -%>        
</body>
</html>